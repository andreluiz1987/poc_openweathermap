<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_city_favorite"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="5dp"
        android:clickable="true"
        android:elevation="3dp"
        android:focusable="true"
        android:foreground="?android:selectableItemBackground"
        card_view:cardCornerRadius="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">

            <TextView
                android:id="@+id/txt_item_row_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_circle"
                android:gravity="center"
                android:text="B"
                android:textColor="#FFF"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txt_city_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/txt_item_row_city"
                android:layout_toEndOf="@+id/txt_item_row_city"
                android:textSize="18sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:textStyle="bold"
                tool:text="Belo Horizonte" />

            <TextView
                android:id="@+id/txt_city_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/txt_item_row_city"
                android:layout_alignParentRight="true"
                android:textSize="16sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:textStyle="bold"
                tool:text="35ÂºC" />

            <TextView
                android:id="@+id/txt_city_weather"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_city_name"
                android:layout_toEndOf="@+id/txt_item_row_city"
                android:layout_toRightOf="@+id/txt_item_row_city"
                android:textSize="14sp"
                android:layout_marginLeft="15dp"
                tool:text="Nublado" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>